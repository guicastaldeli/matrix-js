{
    "version": 2,
    "builds": [
        { "src": "src/main/**/*", "use": "@vercel/static" }
    ],
    "rewrites": [
        { "source": "/(?!.*\\.(js|css)$)(.*)", "destination": "/src/main/index.html" }
    ],
    "headers": [
        {
            "source": "/(.*)\\.js$",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/javascript"
                }
            ]
        }
    ]
}