{
    "version": 2,
    "builds": [
        { "src": "src/**/*", "use": "@vercel/static" },
        { "src": "assets/**/*", "use": "@vercel/static" }
    ],
    "rewrites": [
        { "source": "/(.*)", "destination": "/src/main/$1" },
        { "source": "/", "destination": "/src/main/index.html" }
    ],
    "headers": [
        {
            "source": "/(.*)\\.js$",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/javascript"
                }
            ]
        },
        {
            "source": "/assets/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=31536000, immutable"
                }
            ]
        }
    ]
}