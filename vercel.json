{
    "version": 2,
    "builds": [
        { "src": "src/**/*", "use": "@vercel/static" }
    ],
    "rewrites": [
        { "source": "/", "destination": "/src/main/index.html" },
        { "source": "/(.*)", "destination": "/src/$1" }
    ],
    "headers": [
        {
            "source": "/(.*)\\.js$",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/javascript"
                }
            ]
        }
    ]
}