{
    "version": 2,
    "builds": [
        { 
            "src": "src/**/*", 
            "use": "@vercel/static"
        },
        { 
            "src": "assets/**/*", 
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        { 
            "source": "/", 
            "destination": "/src/main/index.html" 
        },
        { 
            "source": "/assets/(.*)", 
            "destination": "/assets/$1" 
        },
        { 
            "source": "/src/(.*)", 
            "destination": "/src/$1" 
        },
        {
            "handle": "filesystem"
        }
    ],
    "headers": [
        {
            "source": "/(.*)\\.js$",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/javascript"
                }
            ]
        }
    ]
}